global-reset()

@import "common/*"
@import "mixins/*"

.container
	.top-area
		height:90px
		padding 30px 0px
		.info
			badge(green)
	.detail
		margin-bottom:50px
		center()
		.row
			clearfix()
		.package-stat
			package-stat(48%)
			float:left
		.command
			command(48%)
			float:left

		.dependency-info
			width:48%
			float:left
			.tabs
				height:70px
				clearfix()
				.tab
					font-size:14px
					float:left
					background-color:#eae9e9
					color:#acb3bf
					line-height:70px
					padding:0px 25px	
					border-right:1px solid #e5e4e4
					&:last-child
						border-right:none
					&:hover
						background-color:#ffffff
				.active
					background-color:#ffffff
			.content
				height:200px
				background-color:#ffffff
				box-shadow:card_shadow
				table
					width:100%
		.maintainers
			maintainers(48%)
			float:left
			height:270px
			.body
				height:200px
		.readme
			readme(98%)
			float:left


@media (min-width: 0px)
	.container
		.detail
			width:100%
			.card
				width:100%
				margin:2% 0%
			.readme
				width:100%
				margin:2% 0%

@media (min-width: 850px)
	.container
		.detail
			width:95%
			.card
				width:48%
				margin:1%
			.readme
				width:98%
				margin:1%

	
