global-reset()
@import "mixins/*"

* 
	box-sizing:border-box

html body
	height:auto

body
	background-color:#e3e2e2

section
	margin:20px
	float:left

user(width)
	position:relative
	width:width
	height:350px
	background-color:#ffffff
	text-align:center
	padding-top:40px
	img.avatar
		cycle(150px)
	.username
		margin-top:25px
		width:100%
		font-size:24px
		center()
	.packages
		position:absolute
		right:0px
		bottom:28px
		height:28px
		padding:0px 10px
		line-height:28px
		font-size:12px
		background-color:#e98065
		color:#ffffff



user-info(width)
	width:width
	height:350px
	background-color:#ffffff
	.head
		height:70px
		line-height:70px
		padding:0px 20px
		color:#dcdfe5
	.item
		height:40px
		border-top:1px solid #d0d7dd
		font-size:13px
		line-height:40px
		text-align:left
		position:relative
		width:100%
		clearfix()
		&:last-child
			border-bottom:1px solid #d0d7dd
		&:nth-child(odd)
			background-color:#f0f1f5
		&:nth-child(even)
			background-color:#e9eaee
		.title
			float:left
			padding-left:20px
			color:#a4acbb
			width:35%
		.content
			float:left
			padding-left:20px
			width:65%
			color:#a4acbb

package-info(width)
	width:width
	height:100px
	background-color:#ffffff
	clearfix()
	img.avatar
		float:left
		width:100px
		height:100px
	.content
		padding-left:100px
		.top
			height:50%
			clearfix()
			line-height:50px
			.package-name
				padding-left:15px
				font-size:16px
				float:left
				color:#6d6d6d
			.version
				float:right
				color:#c6c6c6
				font-size:17px
				padding-right:20px
		.bottom
			color:#c6c6c6
			height:50%
			.description
				padding-left:15px
				float:left
				font-size:12px


package-stat(width)
	width:width
	height:150px
	background-color:#ffffff
	.top
		height:100px
		img.avatar
			float:left
			margin:22.5px
			cycle(55px)
		.txt
			float:left
			line-height:100px
			color:#919bad
	.bottom
		color:#a6a6a6
		background-color:#f0f1f5
		height:50px	
		.item
			float:left
			font-size:10px
			line-height:50px
			padding:0px 20px
			border-right:1px solid #d1d8de		
			&:last-child
				border-right:none	

maintainers(width)
	width:width
	background-color:#ffffff
	.head
		height:70px
		line-height:70px
		padding:0px 20px
		color:#dcdfe5
	.content
		padding:10px
		background-color:#f0f1f5
		.avatar
			cycle(50px)
			margin:10px

command(width)
	width:width
	background-color:#ffffff
	height:50px
	line-height:50px
	font-size:14px
	box-shadow:0px 2px 2px 0px #acabab
	.title
		float:left
		text-align:center
		color:#a7afbe
		background-color:#ffffff
		width:100px
	.content
		padding-left:100px
		background-color:#1f1f20
		.txt
			color:#828a9a
			padding-left:20px

badge(bg)
	height:50px
	line-height:50px
	background-color:bg
	color:#ffffff
	font-size:16px
	padding:0px 20px

readme(width)
	width:width
	background-color:#ffffff
	position:relative
	&:before
		content:""
		position:absolute
		background-color: #e98065
		width:6px
		height:24px
		top:7px
		left:-6px
	.title
		height:40px
		line-height:40px
		padding-left:20px
		color:#d8d8d8
	.content
		padding:20px



.user
	user(300px)

.user-info
	user-info(300px)

.package-info
	package-info(400px)

.package-stat
	package-stat(400px)

.maintainers
	maintainers(400px)

.command
	command(500px)

.badge-red
	badge(#e98065)

.badge-green
	badge(#04bfac)

.readme
	readme(660px)

.tabs
	height:70px
	clearfix()
	.tab
		font-size:14px
		float:left
		background-color:#eae9e9
		color:#acb3bf
		line-height:70px
		padding:0px 30px	
		border-right:1px solid #e5e4e4
		&:last-child
			border-right:none
		&:hover
			background-color:#ffffff
	.active
		background-color:#ffffff
		
