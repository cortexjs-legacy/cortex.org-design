global-reset()
@import "mixins/*"
@import "common/*"

* 
	box-sizing:border-box

html body
	height:auto

body
	background-color:#e3e2e2


section
	margin:20px
	float:left


.user
	user(300px)

.user-info
	user-info(300px)

.package-info
	package-info(400px)

.package-stat
	package-stat(400px)

.maintainers
	maintainers(400px)

.command
	command(500px)

.badge-red
	badge(#e98065)

.badge-green
	badge(#04bfac)

.readme
	readme(660px)

.tabs
	height:70px
	clearfix()
	.tab
		font-size:14px
		float:left
		background-color:#eae9e9
		color:#acb3bf
		line-height:70px
		padding:0px 30px	
		border-right:1px solid #e5e4e4
		&:last-child
			border-right:none
		&:hover
			background-color:#ffffff
	.active
		background-color:#ffffff



