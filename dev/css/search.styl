global-reset()
@import "common/*"
@import "mixins/*"

* 
	box-sizing:border-box

html body
	height:auto

body
	background-color:#e3e2e2


.container
	.top-area
		height:90px
		padding 30px 0px
		.info
			badge(red)
	.packages
		.package-info
			float:left

@media (min-width: 0px )
	.packages
		padding:0px
	.package-info
		package-info(100%)
		margin:2% 0%
		float:left

@media (min-width: 700px)
	.packages
		padding:0px 1%
	.package-info
		package-info(47%)
		margin:1.5%
		float:left


@media (min-width: 1100px)
	.package-info
		package-info(31.3%)
		margin:1%
		float:left
	
