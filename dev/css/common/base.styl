red = #e87b5e
green = #07c2af
yello = #f0d250
blue = #2aacd0

nav_shadow = 0 2px 5px rgba(0, 0, 0, .2)
nav_height = 60px

card_shadow = 0 2px 2px rgba(0, 0, 0, .2)

body
	font-family: "Helvetica Neue", arial, sans-serif
	font-weight:100
	letter-spacing:1px

table
	background-color:#ffffff
	padding 0px
	tr
		height:40px
		&:nth-child(odd)
			background-color:#f0f1f5
		&:nth-child(even)
			background-color:#e9eaee
		th
			border-top:1px solid #d0d7dd
			border-bottom:1px solid #d0d7dd
			color:#919bad
			padding:0px 20px
			font-size:14px
		td
			font-size:12px
			border-bottom:1px solid #d0d7dd
			color:#777777
			padding:0px 20px

.nav
	height:nav_height
	box-shadow:nav_shadow 
	background-color:#e6e6e7
	.home
		float:left
		width:nav_height
		height:nav_height
		position:relative
		cursor:pointer
		image:'../img/logo.png'
		&:hover
			image:'../img/logo-hover.png'
	.panel
		float:right
		.search-box
			position:relative
			float:left
			padding:10px 20px
			input[type=text] 
				height:40px
				background-color:#ffffff
				border:none
				border-radius:20px
				width:300px
				padding:0px 36px 0px 36px
				font-size:18px
				color:#a8a8a8
			&:before
				content:""
				position: absolute
				image:'../img/icon-search.png'
				width:26px
				height:26px
				top:17px
				left:28px
			.icon-close
				position: absolute
				image:'../img/icon-close.png'
				width:26px
				height:26px
				top:17px
				right:28px
		.util-panel
			float:left
			.doc
				height:nav_height
				border-left:1px solid #02050c
				width:nav_height
				float:left
				cursor:pointer
			.get-started
				cursor:pointer
				border-left:1px solid #02050c
				line-height:nav_height
				padding:0px 24px
				font-size:16px
				color:#ffffff
				float:left
				background-color:green
			.user
				cursor:pointer
				border-left:1px solid #02050c
				float:left
				height:nav_height
				width:nav_height
				img.avatar
					width:100%
					height:100%
			.login
				background-color:#222222

@media (min-width: 0px)
	.nav
		.util-panel
			display:none
		
@media (min-width: 700px)
	.nav
		.util-panel
			display:block
	





